<div class="container-fluid">
    <header class="clearfix">
        <div class="profile_image float-left">
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "rounded-circle profile-thumb", fallback: "no_image.jpg" %>
        </div>
        <h3>
            <%= @user.display_name %>
        </h3>
        <div>
            <% if @user.id == current_user.id %>
            <%= link_to "プロフィール編集", edit_user_path(@user), class: "float-right" %>
            <% end %>
        </div>
    </header>
    <div class="row">
        <% @photos.each do |photo| %>
        <div class="col-sm-8  mx-auto text-center">
            <!-- mx-autoでボックスをセンターに寄せる -->
            <%= link_to photo_path(photo.id), class: 'text-dark' do %>
            <!-- //w-100で画像サイズを100%にリサイズ設定 -->
            <%= attachment_image_tag photo, :image, class: "w-100" %>
            <p>
                タイトル:
                <%= photo.title %><br>
            </p>
            <% end %>
        </div>
        <% end %>
    </div>
</div>