<h2>会員詳細画面	<span class="badge badge-secondary"><%= @user.status %>会員</span></h2>
	<table class="table table-hover">
		<tr>
			<td>顧客ID　</td>
			<td><%= @user.id %></td>
			<!--<td>ステータス</td>-->
		</tr>
		<tr>
			<td>氏名　</td>
			<td><%= @user.last_name %><%= @user.first_name %></td>
		</tr>
		<tr>
			<td>フリガナ　</td>
			<td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
		</tr>
		<tr>
			<td>表示名　</td>
			<td><%= @user.display_name %></td>
		</tr>
		<tr>
			<td>メールアドレス　</td>
			<td><%= @user.email%></td>
		</tr>
	</table>
	<%= link_to '編集する', edit_admin_user_path(@user.id), class: "btn btn-primary" %>
	<%#= link_to '投稿一覧を見る', admin_photos_search_path(@user.id), class: "btn btn-primary" %>
