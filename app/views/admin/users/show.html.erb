<div class="container mt-5">
    <h2>会員詳細画面 <span class="badge badge-secondary">
            <%= @user.status %>会員</span></h2>
    <table class="table table-hover">
        <tr>
            <td>顧客ID　</td>
            <td>
                <%= @user.id %>
            </td>
            <!--<td>ステータス</td>-->
        </tr>
        <tr>
            <td>氏名　</td>
            <td>
                <%= @user.last_name %>
                <%= @user.first_name %>
            </td>
        </tr>
        <tr>
            <td>フリガナ　</td>
            <td>
                <%= @user.last_name_kana %>
                <%= @user.first_name_kana %>
            </td>
        </tr>
        <tr>
            <td>表示名　</td>
            <td>
                <%= @user.display_name %>
            </td>
        </tr>
        <tr>
            <td>メールアドレス　</td>
            <td>
                <%= @user.email%>
            </td>
        </tr>
        <tr>
            <td>アイコン画像</td>
            <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "rounded-circle profile-thumb", fallback: "no_image.jpg", :width => "100", :height => "100" %>
            </td>
        </tr>
    </table>
    <div class="row">
        <div class="col-sm-3">
            <%= link_to '編集する', edit_admin_user_path(@user.id), class: "btn btn-primary" %>
            <%#= link_to '投稿一覧を見る', admin_photos_search_path(@user.id), class: "btn btn-primary" %>
        </div>
        <div class="col-sm-2">
            <%= link_to '投稿一覧を見る', show_photo_admin_user_path(@user.id), class: "btn btn-primary" %>
        </div>
    </div>
</div>