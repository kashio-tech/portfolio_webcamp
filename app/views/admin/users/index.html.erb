<div class="container mt-5">
<h1>ユーザー一覧画面</h1>

<table class="table table-hover">
  <tbody>
    <tr>
      <th>ユーザーID</th>
      <th>氏名</th>
      <th>表示名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th>アイコン画像</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td>
      <%= link_to admin_user_path(user.id) do %>
        <%= user.last_name %> <%= user.first_name %>
      <% end %>
      </td>
      <td><%= user.display_name %></td>
      <td><%= user.email %></td>
      <td><%= user.status %></td>
      <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, class: "rounded-circle profile-thumb", fallback: "no_image.jpg", :width => "50", :height => "50" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>