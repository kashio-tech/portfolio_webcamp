<div class="container">
    <div class="row">
        <div class="container-fluid bg-3 text-center mt-5">
            <% @photos.each do |photo| %>
            <div class="col-sm-3">
                <%#= attachment_image_tag photo, :image, :fill, 200, 200, fallback: "no_image.jpg", :width => "200", :height => "150" %>
                <%= link_to photo_path(photo.id) do %>
                <%= attachment_image_tag photo, :image, :fill, 200, 200 %>
                <p>タイトル:
                    <%= photo.title %>
                </p>
                <p>撮影者:
                    <%= photo.user.display_name %>
                </p>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
</div>